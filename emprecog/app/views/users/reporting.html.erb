<h3>Reporting</h3>
<!-- tabs example: https://jqueryui.com/tabs/ -->
<div id="tabs">
  <ul>
    <li><a href="#all_awards">All Awards</a></li>
    <li><a href="#user_awards">Awards for User</a></li>
    <li><a href="#by_user">Awards Given by User</a></li>
  </ul>

  <div id="all_awards">
    <%= pie_chart @award_overview %>
  </div>

  <div id="user_awards">
    <p>Select user:</p>

    <%= form_tag do %>
      <div class="field">
        <%= label_tag :name %>
        <%= select_tag :name, options_from_collection_for_select(@user_select, "id", "full_name") %>
      </div>
    <% end %>
  </div>
  <div id="by_user">
    <p>Select user:</p>

    <%= form_tag do %>
      <div class="field">
        <%= label_tag :name %>
        <%= select_tag :name, options_from_collection_for_select(@user_select, "id", "full_name") %>
      </div>
    <% end %>
  </div>
</div>
