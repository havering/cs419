<p id="notice"><%= notice %></p>

<h1>Awards</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Awardee</th>
      <th>Type</th>
      <th>Granted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.name %></td>
        <td><%= award.type %></td>
        <td><%= award.granted %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Award', new_award_path, class: "btn btn-info" %>
